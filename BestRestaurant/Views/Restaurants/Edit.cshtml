@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

<h2>Edit A Restaurant</h2>

<h4>Editing This Restaurant: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required=true})
  </div>
  <div class="form-group">
    <label for="StreetAddress">Street Address</label>
    @Html.TextBoxFor(model => model.StreetAddress, new { @class = "form-control"})
  </div>
  <div class="form-group">
    <label for="City">City</label>
    @Html.TextBoxFor(model => model.City, new { @class = "form-control"})
  </div>
  <div class="form-group">
    <label for="State">State</label>
    @Html.TextBoxFor(model => model.State, new { @class = "form-control", @pattern="[A-Z]{2}"})
  </div>
  <div class="form-group">
    <label for="Website">Website</label>
    @Html.TextBoxFor(model => model.Website, new { @class = "form-control"})
  </div>
  <div class="form-group">
    <label for="Phone">Phone Number</label>
    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId", @ViewBag.CuisineId, null, new { @class = "form-control" })
  </div>
  <input type="submit" value="Save" class="btn btn-info" />
}
<p>@Html.ActionLink("Back to Restaurant List", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
