@{
  Layout = "_Layout";
}

@* @model BestRestaurant.Models.Review *@

<h4>Add a Review</h4>
@using (Html.BeginForm())
{
  <input type="text" name="restaurantId" id="restaurantId" class="hidden" value=@ViewBag.Restaurant.RestaurantId />
  <div class="form-group">
    <label for="reviewText">Review: </label>
    <input type="text" name="reviewText" id="reviewText" class="form-control" required />
  </div>
  <div class="form-group">
    <label for="reviewerName">Name: </label>
    <input name="reviewerName" id="reviewerName" type="text", class="form-control" />
  </div>
  <div class="form-group">
    <label for="reviewScore">Overall Score: </label>
    <select name="reviewScore" id="reviewScore" class="form-control">
      <option val="1">1</option>
      <option val="2">2</option>
      <option val="3">3</option>
      <option val="4">4</option>
      <option val="5" selected>5</option>
    </select>
  </div>
  <input type="Submit" value="Add Review" class="btn btn-success" />
}